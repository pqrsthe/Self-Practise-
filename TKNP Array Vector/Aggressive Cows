#include <bits/stdc++.h>
using namespace std;
// SPOJ - Aggressive Cows
// https://hnoj.edu.vn/contest/c1c3_bs4
#define el '\n'
#define ll long long
#define st first
#define nd second
#define pii pair<int,int>

const int INTMAX = 2e9;
const int nm = 2e5 + 9;
int a[nm],b[nm]; 

bool check(int n, int a[], int c, int value){
	int vt = 1, dem = 1; 
	for (int i = 2; i <= n; i++){
		if (a[i] - a[vt] >= value){
			vt = i; 
			dem++; 
		}
	}
	if (dem >= c) return true; 
	return false; 
}

void solve(){
	int n,c; cin >> n >> c; 
	for (int i = 1; i <= n; i++) cin >> a[i]; 
	sort (a + 1, a + 1 + n); 
	int l = 1, r = 1e9, ans = 0;
	while (l <= r){
		int mid = (l + r) / 2; 
		if (check(n , a, c, mid)){
			ans = max(ans , mid); 
			l = mid + 1; 
		}
		else r = mid - 1; 
	}
	cout << ans; 
}

signed main (){
	int t; t = 1;
	while (t--){
		solve();
	}
	return 0;
}

#include <bits/stdc++.h>
using namespace std;
// https://hnoj.edu.vn/contest/c1c3_bs4
#define el '\n'
#define ll long long
#define st first
#define nd second
#define pii pair<int,int>

const int INTMAX = 2e9;
const int nm = 2e5 + 9;
int a[nm],b[nm]; 

bool check(int n, int a[], int m, int value){
	int dem = 1, sum = value;
	for (int i = 1; i <= n; i++){
		if (a[i] <= sum){
			sum -= a[i]; 
		}
		else{
			dem++; 
			sum = value; 
			if (sum >= a[i]) sum -= a[i]; 
			else return false;  
		}
	}
	if (dem <= m) return true; 
	return false;
}

void solve(){
	int n,m; cin >> n >> m; 
	for (int i = 1; i <= n; i++) cin >> a[i]; 
	int l = 1, r = 1e9, ans = 1e9;
	while (l <= r){
		int mid = l + r >> 1; 
		if (check(n , a, m, mid)){
//			cout << l << " " << r << " " << mid << el; 
			ans = min(ans , mid); 
			r = mid - 1; 
		}
		else l = mid + 1;
	}
	cout << ans; 
}

signed main (){
	int t; t = 1;
	while (t--){
		solve();
	}
	return 0;
}

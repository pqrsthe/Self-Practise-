#include <bits/stdc++.h>
using namespace std;
// https://hnoj.edu.vn/contest/c1c3_bs4
#define el '\n'
#define ll long long
#define st first
#define nd second
#define pii pair<int,int>

const int INTMAX = 2e9;
const int nm = 2e5 + 9;
int a[nm],b[nm]; 

bool check(int n, int a[], int b[], ll m, ll value){
	ll tmp = m; 
	for (int i = 1; i <= n; i++){
		if (1LL*a[i] * b[i] > value){
			ll remain = (value / b[i]) * b[i]; 
			tmp -= (1LL*a[i] * b[i] - remain) / b[i];
			if (tmp < 0) return false; 
		}
	}
	return true; 
}

void solve(){
	int n; ll m; cin >> n >> m; 
	for (int i = 1; i <= n; i++) cin >> a[i]; 
	for (int i = 1; i <= n; i++) cin >> b[i]; 
	ll l = 0, r = 1e18, ans = 1e18; 
	while (l <= r){
		ll mid = (l + r) / 2; 
		if (check(n , a, b, m, mid)){
			ans = min(ans, mid);
			r = mid - 1; 
		}
		else l = mid + 1; 
	}
	cout << ans;
}

signed main (){
	int t; t = 1;
	while (t--){
		solve();
	}
	return 0;
}

#include <bits/stdc++.h>
using namespace std;
// https://oj.vnoi.info/contest/bdi77_week_25aug18
#define task "taptanh"
#define ll long long

const int maxN = 2e5 + 9;
const int MOD = 1e9 + 711;
const int S = 450;

int n, a[maxN];

void add(int &x, const int &y){
    x += y; if (x >= MOD) x -= MOD;
}

signed main(){
    freopen (task".inp", "r", stdin);
    freopen (task".out", "w", stdout);

    cin >> n;
    for (int i = 1; i <= n; i++) cin >> a[i];

    vector<int> dp(n + 1, 0); dp[1] = 1;
    vector<int> pref[S + 1];
    for (int i = 0; i < S; i++) pref[i].assign(n + 1, 0);
    if (a[1] <= S) pref[a[1]][1 % a[1]] = 1;
    else{
        for (int i = 1 + a[1]; i <= n; i += a[1])
        {add(dp[i], dp[1]);}
    }

    for (int i = 2; i <= n; i++){
        for (int d = 1; d < S; d++){
            add(dp[i], pref[d][i % d]);
        }
        if (a[i] >= S){
            for (int x = 1; x <= (n - i) / a[i]; x++){
                add(dp[i + a[i] * x], dp[i]);
            }
        } else{
            add(pref[a[i]][i % a[i]], dp[i]);
        }
    }

    int res = 0;
    for (int i = 1; i <= n; i++){
        add(res, dp[i]);
    }
    cout << res << '\n';
    return 0;
}

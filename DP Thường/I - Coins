#include<bits/stdc++.h>
using namespace std;
const int nm = 3e3 + 9;
const int N = 1e3 + 9;
#define el '\n'
#define int long long
int n; 
double dp[nm][nm], p[nm]; 

signed main() {
    ios_base::sync_with_stdio(false);
	cin.tie(NULL); cout.tie(NULL);
    int n; cin >> n;
    for(int i = 1; i <= n; ++i) cin >> p[i];
    int sl = n / 2 + 1;
    for (int i = 0; i <= n; ++i) dp[i][0] = 1;
    for (int i = 1; i <= n; ++i) {
        for (int j = 1; j <= sl; ++j) {
            dp[i][j] = dp[i - 1][j - 1] * p[i] + dp[i - 1][j] * (1 - p[i]);
        }
    }
    cout << fixed << setprecision(10) << dp[n][sl]; 
}

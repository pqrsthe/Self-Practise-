#include <bits/stdc++.h>
using namespace std;
#define int long long
const int nm = 5e2 + 9;
const int N = 51; 
const int MOD = 1e9 + 7;
const int LOG = 23;
const int INF = 2e12; 
#define el '\n'
#define pii pair<int,int>
int k,x,dp[N][N][N],res;
void add(int &x, int y){
	x += y; if (x >= MOD) x -= MOD; 
}

signed main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL); cout.tie(NULL);
    cin >> k >> x; 
    for (int i = 1; i <= k; i++){
    	for (int minn = 1; minn <= k; minn++){
    		for (int maxx = minn; maxx <= min(k,minn*x-1); maxx++){
    			if (i == 1 && minn == maxx){
    				dp[i][minn][minn] = 1;
    				continue; 
				} 
    			int maxx_ = maxx; 
    			while (maxx_ <= maxx && maxx_ >= minn){
    				add(dp[i][minn][maxx],dp[i-1][minn][maxx_]); 
    				maxx_--;
				}
			}
		}
	}
	
	for (int minn = 1; minn <= k; minn++){
		for (int maxx = minn; maxx <= min(k,minn*x-1); maxx++)
			add(res,dp[k][minn][maxx]);
	}
	cout << res; 
    return 0;
}

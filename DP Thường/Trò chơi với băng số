#include <bits/stdc++.h>
using namespace std;
// VOI 2009 - BÃ i 1
#define el '\n'
#define ll long long

const int nm = 1e5 + 9;
ll dp[nm][1],a[nm];
signed main (){
	int n; cin >> n; 
	for (int i = 1; i <= n; i++) cin >> a[i]; 
	// THCS: 
	dp[1][0] = a[1];
	dp[2][0] = max(dp[1][0] , a[2]); 
	dp[2][1] = max(a[2] - a[1] , 1LL*0);
	// CTTH:
	for (int i = 1; i <= n; i++){
		// 0: cong, 1: tru
//		dp[i][0] = max(dp[i - 1][0] , dp[i - 1][1] + a[i]);
//		dp[i][1] = max(dp[i - 1][1] , dp[i - 1][0] - a[i]);  
		dp[i][0] = max(dp[i - 1][0] , dp[i - 1][1] - a[i]);
		dp[i][1] = max(dp[i - 1][1] , dp[i - 1][0] + a[i]);  
	}
	cout << max(dp[n][0] , dp[n][1]);
	return 0;
}

#include <bits/stdc++.h>
using namespace std;
const int nm = 1e6 + 9;
const int N = 3e3 + 9;
#define el '\n'
#define int long long
int n,a[nm]; 
int dp[N][N];

signed main (){
	ios_base::sync_with_stdio(false);
	cin.tie(NULL); cout.tie(NULL);
	cin >> n; 
	for (int i = 1; i <= n; i++){
		cin >> a[i]; 
		dp[i][i] = a[i]; 
	}
	for (int len = 2; len <= n; len++){
		for (int i = 1; i <= n - len + 1; i++){
			int j = i + len - 1; 
			dp[i][j] = max(a[i] - dp[i+1][j], a[j] - dp[i][j-1]);
		}
	}
	cout << dp[1][n]; 
	return 0;
}

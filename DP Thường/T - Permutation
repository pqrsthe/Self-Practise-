#include <bits/stdc++.h>
using namespace std;

#define el '\n'
#define int long long
#define st first
#define nd second
#define pii pair<int,int>
#define psi pair<string,int>

const long long INF = 1e15;
const int nm = 2e5 + 9;
const int N = 3e3 + 9;
const int MOD = 1e9 + 7;
int dp[N][N], pre[N][N];
void solve(){
	int n; cin >> n;
	pre[1][1] = 1; 
	for (int i = 2; i <= n; i++){
		char chr; cin >> chr; 
		for (int j = 1; j <= i; j++){
			if (chr == '<'){
				pre[i][j] = pre[i - 1][j - 1] % MOD; 
			}
			else{
				pre[i][j] = (pre[i - 1][i - 1] + MOD - pre[i - 1][j - 1]) % MOD;
			}
		}
		for (int j = 1; j <= i; j++){
			pre[i][j] += pre[i][j - 1]; 
			pre[i][j] %= MOD;
		}
	}
	cout << pre[n][n] << el; 
}

signed main (){
	int t; t = 1;
	while (t--){
		solve();
	}
	return 0;
}

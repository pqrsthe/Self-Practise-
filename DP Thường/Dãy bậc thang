#include <bits/stdc++.h>

using namespace std;
// Bedao Regular Contest 24 - VNoj 
const int nm = 1e6 + 5;

int n,a[nm],last[nm],dp[nm];
bool check[nom];
vector <int> res;

int main ()
{
	freopen ("T85.inp","r",stdin);
	freopen ("T85.out","w",stdout);
	cin >> n; 
	dp[1] = 1; dp[0] = 0;
	for (int i = 1; i <= n; i++)
	{
		last[a[i] + 1] = 0; 
		cin >> a[i];
		last[a[i]] = i; 
		check[a[i]] = 1;
		if (!check[a[i] + 1]) dp[i] = 1; 
		else
		{
			dp[i] = dp[last[a[i] + 1]] + 1; 
//			trace[i] = last[a[i] + 1]; 
		}
	} 
	int ans = 1;
	// a(b(k-1)) + k - 1 = a(b(k)) + k <=> a(b(k))+1 = a(b(k-1))
	for (int i = 1; i <= n; i++) 
		if (dp[i] > dp[ans]) ans = i; 
	cout << dp[ans] << endl;
	// trace:
	res.push_back(ans);
	for (int i = ans - 1; i >= 1; i--)
		if (dp[ans] == (dp[i] + 1) && a[ans] + 1 == a[i]) 
		{
			res.push_back(i);
			ans = i; 
		}
	reverse(res.begin(), res.end());
	for (auto i : res) cout << i << " ";
		return 0;
}

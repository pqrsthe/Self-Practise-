#include <bits/stdc++.h>
using namespace std;
const int nm = 2e4 + 9;
const int N = 1e3 + 9;
#define el '\n'
#define int long long
int n, dp[nm];
struct INFO{
	int w,s,v; 
};
INFO a[nm]; 

bool cmp(INFO a, INFO b){
	// s(a) - w(b) < s(b) - w(a) 
	return a.s + a.w  < b.s + b.w; 
}

signed main (){
	ios_base::sync_with_stdio(false);
	cin.tie(NULL); cout.tie(NULL);
	cin >> n; int mx = -1;
	for (int i = 1; i <= n; i++) cin >> a[i].w >> a[i].s >> a[i].v, mx = max(mx, a[i].s + a[i].w);
	sort (a + 1, a + 1 + n, cmp); 
	// dp(i,j): tong gia tri max khi xet i hon da dau tien 
	// va j la trong luong toa thap
	for(int i = 1; i <= n; i++) {
        for(int j = a[i].s + a[i].w; j >= a[i].w; --j) {
            dp[j] = max(dp[j], dp[j - a[i].w] + a[i].v);
        }
    }
    cout << *max_element(dp, dp + nm - 5); 
	return 0;
}
